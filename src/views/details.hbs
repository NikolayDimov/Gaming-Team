<main id="details">
    <section id="details-info">
        <div class="game-image">
            <img src={{currGame.image}}>
        </div>

        <div class="game-info">
            <div class="game-text">
                <h1 id="name">{{currGame.name}}</h1>
                <h3 id="platform">Platform: {{currGame.platform}}</h3>
                <p id="price"><span>Price: ${{currGame.price}}</span></p>
                <p id="genre"><span>Genre: {{currGame.genre}}</span></p>
                <p id="description">{{currGame.description}}</p>
            </div>
            <div class="product-btn">

                {{#if isAuthenticated}}
                    {{#if isOwner}}
                        <!--Only for registered user and author of the publication -->
                        <div class="author">
                            <a href="/catalog/{{currGame._id}}/edit" class="btn-edit">Edit</a>
                            <a href="/catalog/{{currGame._id}}/delete" class="btn-delete">Delete</a>
                        </div>
                    {{else}}
                        {{#if isBuyer}}
                            <!-- Logged in user who has already buy this game code-->
                            <p class="buy-message">You have already bought this game</p>
                        {{else}}
                            <!-- Logged in user who has not yet buy this game code-->
                            <a href="/catalog/{{currGame._id}}/buy" class="btn-buy">Buy</a>
                        {{/if}}
                    {{/if}}
                {{/if}}
                
            </div>
        </div>
    </section>
</main>